{
  "name": "cetus-react-starter",
  "description": "React 18 starter",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "test": "jest --passWithNoTests",
    "lint": "eslint src --max-warnings=0",
    "prepare": "husky install",
    "format": "prettier --write ./**/*.{js,jsx,ts,tsx,css,md,json} --config ./.prettierrc"
  },
  "lint-staged": {
    "src/*.{ts,tsx}": [
      "pnpm format",
      "pnpm lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "pnpm run test"
    }
  },
  "dependencies": {
    "@emotion/react": "^11.9.3",
    "@hookform/resolvers": "^2.9.1",
    "@mantine/core": "^5.0.0",
    "@mantine/dates": "^5.0.0",
    "@mantine/hooks": "^5.0.0",
    "@mantine/modals": "^5.0.0",
    "@mantine/notifications": "^5.0.0",
    "@mui/x-date-pickers": "^5.0.14",
    "@reduxjs/toolkit": "^1.9.1",
    "axios": "^0.27.2",
    "dayjs": "^1.11.3",
    "dompurify": "^2.4.3",
    "lodash": "^4.17.21",
    "react": "^18.1.0",
    "react-datetime-picker": "^4.1.1",
    "react-dom": "^18.1.0",
    "react-helmet": "^6.1.0",
    "react-hook-form": "^7.32.0",
    "react-icons": "^4.4.0",
    "react-query": "3.39.1",
    "react-quill": "^2.0.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.3.0",
    "redux": "^4.2.0",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^2.4.2",
    "redux-toolkit": "^1.1.2",
    "tabler-icons-react": "^1.56.0",
    "yup": "^0.32.11",
    "zustand": "^4.0.0-rc.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@honkhonk/vite-plugin-svgr": "^1.1.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/dompurify": "^2.4.0",
    "@types/jest": "^28.1.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.41",
    "@types/react": "^18.0.12",
    "@types/react-helmet": "^6.1.5",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "@vitejs/plugin-react": "^1.3.2",
    "autoprefixer": "^10.4.7",
    "babel-jest": "^28.1.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-tailwindcss": "^3.5.2",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "lint-staged": "^13.0.1",
    "postcss": "^8.4.14",
    "prettier": "2.6.2",
    "tailwindcss": "^3.1.2",
    "typescript": "^4.7.3",
    "vite": "^2.9.12",
    "vite-tsconfig-paths": "^3.5.0"
  }
}
